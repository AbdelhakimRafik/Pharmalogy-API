extends layouts/master.pug

block content
	.content
		//- Start Content
		.container-fluid
			//- start page title
			.row
				.col-12
					.page-title-box
						.page-title-right
						h4.page-title Sell Medicine
			//- end page title
			.row
				.col-12
					.card
						.card-body
							.row
								.col-lg-8
									.table-responsive
										table.table.table-borderless.table-centered.mb-0
											thead.thead-light
												tr
													th Product
													th Price
													th Quantity
													th Total
													th(style='width: 50px;')
											tbody#cart

									.row.mt-3
										.col-sm-7
											label(for='example-textarea') Medicine:
											select#medicine.form-control
												option Select medicine
												
										.col-sm-3
											label(for='example-textarea') Quantity:
											input#quantity.form-control(type='number' min='1' value='1' placeholder='Qty')
										.col-sm-2
											button#add-btn.btn.btn-danger(type='button', style='margin-top:30px;width:99%')
												i.mdi.mdi-plus.mr-1
												|  Add
									//- action buttons
													
								.col-lg-4
									.border.p-3.mt-4.mt-lg-0.rounded
										h4.header-title.mb-3 Order Summary
										.table-responsive
											table.table.mb-0
												tbody
													tr
														th Total :
														th
															span#total 00.00
															|  Dh
										//- end table-responsive
									//- .alert.alert-warning.mt-3(role='alert')
									//-	| Use coupon code 
									//-	strong UBTF25
									//-	|  and get 25% discount !
							.row.mt-4
								//- end col
								.col-sm-12
									.text-sm-right
										button#validate-btn.btn.btn-success(type='button')
											i.mdi.mdi-cart-plus.mr-1
											|  Validate
block scripts
	script(src='../../app/controllers/sellController.js')
