	body.right-bar-enabled(data-sidebar-size="default", data-sidebar-color="light", data-layout-width="fluid", data-layout-menu-position="fixed", data-sidebar-showuser="false", data-topbar-color="light")

		//- begin page
		#wrapper

			//- top bar
			.navbar-custom
				.container-fluid
					ul.list-unstyled.topnav-menu.float-right.mb-0
						li.dropdown.d-none.d-lg-inline-block
							a.nav-link.dropdown-toggle.arrow-none.waves-effect.waves-light(data-toggle='fullscreen' href='#')
								i.fe-maximize.noti-icon

						li.dropdown.notification-list.topbar-dropdown
							a.nav-link.dropdown-toggle.waves-effect.waves-light(data-toggle='dropdown' href='#' role='button' aria-haspopup='false' aria-expanded='false')
