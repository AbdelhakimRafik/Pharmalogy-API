extends layouts/master.pug

block styles
	link(href='../../assets/vendors/css/summernote-bs4.min.css' rel='stylesheet' type='text/css')
	link(href='../../assets/vendors/css/select2.min.css' rel='stylesheet' type='text/css')
	link(href='../../assets/vendors/css/dropzone.min.css' rel='stylesheet' type='text/css')
	

block content
	.content
		//-- Start Content
		.container-fluid
			//-- start page title
			.row
				.col-12
					.page-title-box
						h4.page-title Add Medicine
			//- end page title
			.row
				.col-lg-6
					.card-box
						h5.text-uppercase.bg-light.p-2.mt-0.mb-3 General
						.form-group.mb-3
							label(for='product-category')
								| Medicine
								span.text-danger *
							select#product-category.form-control.select2
								option Select
								optgroup(label='Shopping')
									option(value='SH1') Shopping 1
									option(value='SH2') Shopping 2
									option(value='SH3') Shopping 3
									option(value='SH4') Shopping 4
								optgroup(label='CRM')
									option(value='CRM1') Crm 1
									option(value='CRM2') Crm 2
									option(value='CRM3') Crm 3
									option(value='CRM4') Crm 4
								optgroup(label='eCommerce')
									option(value='E1') eCommerce 1
									option(value='E2') eCommerce 2
									option(value='E3') eCommerce 3
									option(value='E4') eCommerce 4
						.form-group.mb-3
							label(for='product-name')
								| Quantity 
								span.text-danger *
							input#product-name.form-control(type='number', value="1")
						.form-group.mb-3
							label(for='product-category')
								| Provider
								span.text-danger *
							select#product-category.form-control.select2
								option Select
								optgroup(label='Shopping')
									option(value='SH1') Shopping 1
									option(value='SH2') Shopping 2
									option(value='SH3') Shopping 3
									option(value='SH4') Shopping 4
								optgroup(label='CRM')
									option(value='CRM1') Crm 1
									option(value='CRM2') Crm 2
									option(value='CRM3') Crm 3
									option(value='CRM4') Crm 4
								optgroup(label='eCommerce')
									option(value='E1') eCommerce 1
									option(value='E2') eCommerce 2
									option(value='E3') eCommerce 3
									option(value='E4') eCommerce 4
						.form-group.mb-3
							label(for='product-name')
								| Exp Date
								span.text-danger *
							input#product-name.form-control(type='date')
						
				.col-lg-6
					.card-box
						h5.text-uppercase.mt-0.mb-3.bg-light.p-2 Product Images
						form#myAwesomeDropzone.dropzone(action='/' method='post' data-plugin='dropzone' data-previews-container='#file-previews' data-upload-preview-template='#uploadPreviewTemplate')
							.fallback
								input(name='file' type='file' multiple='')
							.dz-message.needsclick
								i.h1.text-muted.dripicons-cloud-upload
								h3 Drop files here or click to upload.
								span.text-muted.font-13
									| (This is just a demo dropzone. Selected files are
									strong not
									|  actually uploaded.)
						//- Preview
						#file-previews.dropzone-previews.mt-3
					//- end col
					.card-box
						h5.text-uppercase.mt-0.mb-3.bg-light.p-2 Meta Data
						.form-group.mb-3
							label(for='product-meta-title') Meta title
							input#product-meta-title.form-control(type='text' placeholder='Enter title')
						.form-group.mb-3
							label(for='product-meta-keywords') Meta Keywords
							input#product-meta-keywords.form-control(type='text' placeholder='Enter keywords')
						.form-group.mb-0
							label(for='product-meta-description') Meta Description 
							textarea#product-meta-description.form-control(rows='5' placeholder='Please enter description')

			.row
				.col-12
					.text-center.mb-3
						button.btn.w-sm.btn-light.waves-effect(type='button') Cancel
						button.btn.w-sm.btn-success.waves-effect.waves-light(type='button') Save
