extends layouts/master.pug

block styles
	link(href='../../assets/vendors/css/dataTables.bootstrap.min.css' rel='stylesheet' type='text/css')
	link(href='../../assets/vendors/css/responsive.bootstrap.min.css' rel='stylesheet' type='text/css')
	link(href='../../assets/vendors/css/buttons.bootstrap.min.css' rel='stylesheet' type='text/css')
	link(href='../../assets/vendors/css/select.bootstrap.min.css' rel='stylesheet' type='text/css')
	

block content
	.content
		//- Start Content
		.container-fluid
			//- start page title
			.row
				.col-12
					.page-title-box
						h4.page-title Medecines
			//- end page title
			.row
				.col-12
					.card
						.card-body
							.row.mb-2
								.col-sm-4
									button.btn.btn-danger.waves-effect.waves-light(type='button')
										i.mdi.mdi-plus-circle.mr-1
										|  Add Medecine
								.col-sm-8
									.text-sm-right
										button.btn.btn-success.mb-2.mr-1(type='button')
											i.mdi.mdi-cog
										button.btn.btn-light.mb-2.mr-1(type='button') Import
										button.btn.btn-light.mb-2(type='button') Export
								//- end col
							.table-responsive
								table#datatable-medecines.table.table-striped.dt-responsive.nowrap.w-100
									thead
										tr
											th(style='width: 20px;')
												.custom-control.custom-checkbox
													input#customCheck1.custom-control-input(type='checkbox')
													label.custom-control-label(for='customCheck1')  
											th Customer
											th Phone
											th Email
											th Location
											th Create Date
											th Status
											th(style='width: 85px;') Action
									tbody
										- for (var i = 1; i < 100; ++i)
											tr
												td
													.custom-control.custom-checkbox
														input#customCheck2.custom-control-input(type='checkbox')
														label.custom-control-label(for='customCheck2')  
												td.table-user
													img.mr-2.rounded-circle(src='../../assets/img/users/user-4.jpg' alt='table-user')
													a.text-body.font-weight-semibold(href='#') Paul J. Friend
												td
													| 937-330-1634
												td
													| pauljfrnd@jourrapide.com
												td
													| New York
												td
													| 07/07/2018
												td
													span.badge.bg-soft-success.text-success Available
												td
													a.action-icon(href='#')
														i.mdi.mdi-square-edit-outline
													a.action-icon(href='#')
														i.mdi.mdi-delete

block scripts
	script(src='../../assets/vendors/js/jquery.dataTables.min.js')
	script(src='../../assets/vendors/js/dataTables.bootstrap4.min.js')
	script(src='../../assets/vendors/js/dataTables.buttons.min.js')
	script(src='../../assets/vendors/js/pages/datatables.init.js')